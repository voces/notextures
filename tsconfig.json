{
	"compilerOptions": {
		"allowJs": true,
		"target": "ES2020",
		"lib": [ "es2019", "es2020", "DOM" ],
		"moduleResolution": "node",
		"strict": true,
		"module": "ESNext",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"types": ["@types/node", "@types/jest"],
		"noEmit": true,
		"declaration": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}